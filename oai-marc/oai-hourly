#!/bin/bash
#
# Crontab daily runner
#
# 05 * * * * root oai-hourly >> /var/log/oai-hourly.log 2>&1 &
#

VUFIND_PATH='/var/www/html/vufind/'
VUFIND="vufind-$(date '+%Y-%m-%d-%H').tar.gz"

# ------------------------

echo "start $(date '+%Y-%m-%d %H:%M:%S')"

# VUFIND

mkdir -p "$VUFIND_PATH" 2> /dev/null

oai-citace \
	--set UCLA \
	--from "$(date --date='1 hour ago' '+%Y-%m-%d %H:00:00')" \
	--until "$(date '+%Y-%m-%d %H:00:00')" \
	--check

[ -s *.mrc ] &&	tar --remove-files -czf "$VUFIND_PATH/$VUFIND" *.mrc 2>/dev/null

rm *.mrc 2> /dev/null

find $VUFIND_PATH -maxdepth 1 -type f -mtime +14 -exec rm {} \;

echo "end $(date '+%Y-%m-%d %H:%M:%S')"

exit 0

